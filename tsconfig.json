{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "newLine": "LF",
        "outDir": ".",
        "lib": [
            "es6"
        ]
    },
    "include": [
        "ts/index.ts",
        "ts/typings/**/*"
    ],
    "exclude": []
}